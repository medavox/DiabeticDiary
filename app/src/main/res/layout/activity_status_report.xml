<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medavox.diabeticdiary.StatusReportActivity">


    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <!--all-things wrapper for scrollview -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/last_bg_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Last 3 BG readings:"
                android:textSize="@dimen/title_size" />

            <com.medavox.diabeticdiary.ExpandedListView
                android:id="@+id/last_bg_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/recent_qa_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="QA Taken in the last 4 hours:"
                android:textSize="@dimen/title_size" />

            <com.medavox.diabeticdiary.ExpandedListView
                android:id="@+id/recent_qa_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/recent_qa_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/recent_cp_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CPs eaten in the last 4 hours:"
                android:textSize="@dimen/title_size" />

            <com.medavox.diabeticdiary.ExpandedListView
                android:id="@+id/recent_cp_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/recent_cp_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/recent_bi_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BI Taken In The Last 24 Hours:"
                android:textSize="@dimen/title_size" />

            <com.medavox.diabeticdiary.ExpandedListView
                android:id="@+id/recent_bi_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/recent_bi_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout> <!-- end all-things wrapper for scrollview -->
    </ScrollView>
</LinearLayout>
